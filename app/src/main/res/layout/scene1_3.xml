<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kimhuang.project.scene1_3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg"/>

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_pause"
        android:layout_alignParentRight="true"/>


    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:src="@drawable/box1_3"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/book3"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/book3" />

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/trees1"
            android:layout_width="230dp"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/trees" />

        <ImageView
            android:id="@+id/grass"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/grass"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/grass"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/grass"/>


        <ImageView
            android:id="@+id/house1"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/animate_house"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/book3">

        <ImageView
            android:id="@+id/sungthong3"
            android:layout_width="400dp"
            android:layout_height="230dp"
            android:background="@drawable/animate_sungthong1_3"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/chicken1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:background="@drawable/animate_chicken"/>

    </RelativeLayout>


    <Button
        android:id="@+id/btn_back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_back" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_next" />

</RelativeLayout>
