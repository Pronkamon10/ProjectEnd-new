<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scene1_1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_pause"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/box1_1"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/box1_1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/book1" />

    <ImageView
        android:id="@+id/chair"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/chair" />

    <ImageView
        android:id="@+id/yotsawimon1"
        android:layout_width="150dp"
        android:layout_height="350dp"
        android:layout_alignTop="@+id/chair"
        android:layout_centerHorizontal="true"
        android:background="@drawable/animate_yotsawimon1_1" />

    <ImageView
        android:id="@+id/jantawee1"
        android:layout_width="130dp"
        android:layout_height="330dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/chair"
        android:background="@drawable/animate_jantawee1_1" />

    <ImageView
        android:id="@+id/word2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/word2"
        android:layout_toLeftOf="@+id/yotsawimon1"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/word1"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/word1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/janta1"
        android:layout_width="130dp"
        android:layout_height="310dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/chair"
        android:background="@drawable/animate_janta1_1" />

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp">

        <ImageView
            android:id="@+id/word3"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/word3"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_back" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_next" />


</RelativeLayout>
