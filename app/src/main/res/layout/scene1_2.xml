<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kimhuang.project.scene1_2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_pause" />

    <ImageView
        android:id="@+id/box1_2"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:rotationX="90"
        android:src="@drawable/box1_2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/book2" />

    <RelativeLayout
        android:layout_width="530dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/trees1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:rotationX="90"
            android:src="@drawable/trees" />

        <ImageView
            android:id="@+id/trees2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:rotationX="90"
            android:src="@drawable/trees" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/oldmen1"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/animate_oldmen"
        android:rotationX="90" />

    <ImageView
        android:id="@+id/jantawee2"
        android:layout_width="120dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/oldmen1"
        android:background="@drawable/animate_jantawee1_2"
        android:rotationX="90" />

    <ImageView
        android:id="@+id/oldwomen1"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/oldmen1"
        android:background="@drawable/animate_oldwomen"
        android:rotationX="90" />

    <!--word4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|right"
            android:layout_weight="1.3">

            <ImageView
                android:id="@+id/word4"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/word4"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <!--word5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08" />

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.2">

            <ImageView
                android:id="@+id/word5"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/word5"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_back"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_next"
        android:visibility="invisible" />

</RelativeLayout>
